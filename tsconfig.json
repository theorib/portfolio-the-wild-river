{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "target": "ES2022",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Allows for Absolute imports https://nextjs.org/docs/pages/building-your-application/configuring/absolute-imports-and-module-aliases
    "paths": {
      "@/*": ["./src/*"],
      "public/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.ts",
    "eslint.config.ts",
    "vitest.config.ts",
    "tailwind.config.ts",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "vitest.shims.d.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
